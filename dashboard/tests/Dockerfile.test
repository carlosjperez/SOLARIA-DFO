# SOLARIA DFO - Test Server Dockerfile
# Runs dashboard server in test mode

FROM node:22-bookworm-slim

# Install curl for healthchecks and netcat for connectivity checks
RUN apt-get update && \
    apt-get install -y --no-install-recommends curl netcat-traditional && \
    rm -rf /var/lib/apt/lists/*

WORKDIR /app

# Copy wait script
COPY tests/wait-for-services.sh /usr/local/bin/
RUN chmod +x /usr/local/bin/wait-for-services.sh

# Copy package files
COPY package*.json ./

# Install dependencies (including devDependencies for tsx)
RUN npm install

# Copy source code (will be overridden by volumes in docker-compose)
COPY server.ts ./
COPY services ./services
COPY db ./db
COPY config ./config
COPY workers ./workers

# Expose port
EXPOSE 3030

# Wait for DNS resolution then run server
ENTRYPOINT ["/usr/local/bin/wait-for-services.sh"]
CMD ["npx", "tsx", "server.ts"]
