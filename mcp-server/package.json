{
  "name": "solaria-dashboard-mcp",
  "version": "1.0.0",
  "description": "MCP Server for SOLARIA Digital Field Operations Dashboard",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "node server.js",
    "start:http": "node http-server.js",
    "start:ts": "node dist/http-server.js",
    "dev": "tsx watch server.ts",
    "dev:js": "node --watch server.js",
    "dev:http": "tsx watch http-server.ts",
    "dev:http:js": "node --watch http-server.js",
    "test": "NODE_OPTIONS='--experimental-vm-modules' jest",
    "test:unit": "jest --testPathPattern=src/__tests__",
    "test:coverage": "jest --coverage --testPathPattern=src/__tests__",
    "test:smoke": "node tests/smoke.cjs",
    "test:ts": "tsx tests/handlers.test.ts",
    "test:isolation": "node tests/isolation.cjs",
    "test:integration": "node tests/smoke.cjs && node tests/isolation.cjs && tsx tests/handlers.test.ts",
    "build:ts": "tsc",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.24.3",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.3",
    "mysql2": "^3.16.1"
  },
  "keywords": [
    "mcp",
    "solaria",
    "dashboard",
    "project-management"
  ],
  "author": "SOLARIA Agency",
  "license": "MIT",
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^25.0.3",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "zod": "^3.24.3"
  }
}
